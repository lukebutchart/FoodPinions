<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_new_food_pinion"
    tools:context="com.stand_still.foodpinions.activities.NewFoodPinionActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_newFoodPinion_editText"
        android:layout_gravity="center_horizontal"
        android:inputType="textVisiblePassword"
        android:hint="@string/name_newFoodPinion_editText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_newFoodPinion_editText"
        android:layout_gravity="center_horizontal"
        android:inputType="textVisiblePassword"
        android:hint="@string/comment_newFoodPinion_editText"
        android:layout_below="@+id/name_newFoodPinion_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating_newFoodPinion_ratingBar"
        android:layout_below="@+id/comment_newFoodPinion_editText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createFoodPinion_newFoodPinion_button"
        android:id="@+id/createFoodPinion_newFoodPinion_button"
        android:layout_below="@+id/rating_newFoodPinion_ratingBar"
        android:onClick="createFoodPinion"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
