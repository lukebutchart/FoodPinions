<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_food_pinion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.EditFoodPinionActivity">

    <EditText
        android:id="@+id/restaurant_newFoodPinion_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/restaurant_newFoodPinion_editText"
        android:inputType="textVisiblePassword" />

    <EditText
        android:id="@+id/name_newFoodPinion_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/name_newFoodPinion_editText"
        android:inputType="textVisiblePassword" />

    <EditText
        android:id="@+id/comment_newFoodPinion_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/comment_newFoodPinion_editText"
        android:inputType="textVisiblePassword" />

    <!--<RatingBar-->
        <!--android:id="@+id/rating_newFoodPinion_ratingBar"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"/>-->

    <Button
        android:id="@+id/createFoodPinion_newFoodPinion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="confirmFoodPinion"
        android:text="@string/createFoodPinion_newFoodPinion_button"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editButtonImageView"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_edit"
        android:visibility="invisible" />
</LinearLayout>
